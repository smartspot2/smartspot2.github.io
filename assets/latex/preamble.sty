                % don't draw last arrow
                \ifnum\last<\numelements\relax
                    \draw[->] (\labelprefix-\i.east) -- ++(\arrowlength,0) node[outer sep=0pt, inner sep=0pt, minimum size=0pt] (\labelprefix-arrow-\i) {};
