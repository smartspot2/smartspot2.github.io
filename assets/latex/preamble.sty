% include subfiles, with a prefix, in a range of numbers, zero-padded to the left
\newcommand\seqsubfile[4][0]{%
    \ifnum #1=0
        \def\endidx{#4}
        \StrLen{\endidx}[\endidxlen]
    \else
        \def\endidxlen{#1}
    \fi
    \foreach \idx in {#3, ..., #4}{%
        \def\formatidx{\padinteger{\endidxlen}{\idx}}
        \subfile{#2\formatidx.tex}
    }
}

